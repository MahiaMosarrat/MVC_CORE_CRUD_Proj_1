@model List<Module>
<table id="ExTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Module Name</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input type="text" name="Modules[@i].ModuleName" value="@Model[i].ModuleName" class="form-control"/>
                </td>
                <td>
                    <input type="text" name="Modules[@i].Duration" value="@Model[i].Duration" class="form-control" />
                </td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="deleteRow(this)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
    
</table>
<input type="hidden" id="HIndex" value="@Model.Count" />

